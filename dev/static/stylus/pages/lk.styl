.lk

  &__message
    margin-bottom: 28px

  &__sum-date
    display: flex
    justify-content: space-between
    margin-bottom: 26px

  &__sum
    width: calc(50% - 10px)
    background-color: $gray_light3
    padding: 24px 10px 16px

    text-align: center
    font-weight: 700

    .sum

      &__heading
        margin-bottom: 5px

        font-size: 20px
        line-height: 20px
        color: $gray_dark2
        text-transform: uppercase
        
      &__value
        color: $red
        font-size: 33px
        line-height: 35px

      &__date
        font-size: 14px
        line-height: 25px
        color: $gray_dark




  &__date
    width: calc(50% - 10px)
    background-color: $green
    padding: 24px 10px 16px

    text-align: center
    color: $white
    font-weight: 700

    .date

      &__date
        font-size: 18px
        line-height: 22px

      &__time
        font-size: 33px
        line-height: 33px

      &__day
        font-size: 14px
        line-height: 25px

  &__select-period
    display: flex
    justify-content: space-between
    align-items: center
    margin-bottom: 26px

    .presets-date
      display: inline-flex
      background-color: $gray_light3
      padding: 29px 20px 27px

    .presets
      margin-right: 34px

      &__list
        display: flex


      &__item
        width: 67px
        margin-right: 2px

        &:last-child
          margin-right: 0

    .refresh

      .button
        width: auto
        background-color: $gray2
        padding: 0 14px

        &:hover
          color: $white
          border-color: $gray2

        i
          display: inline-block
          width: 18px
          height: 18px
          background-image: url('../img/general/icon-refresh.png')
          background-repeat: no-repeat
          position: relative
          top: 3px
          margin-right: 13px
  
  &__stat
    background-color: $gray_light3
    padding: 36px 36px 56px
    margin-bottom: 48px

    .stat

      &__heading-toggler
        display: flex
        justify-content: space-between
        margin-bottom: 22px

      &__heading
        font-size: 20px
        line-height: 20px
        color: $gray_dark2
        text-transform: uppercase
        font-weight: 700


      &__toggler
        position: relative
        top: -4px
        left: 5px

        .toggler

          &__list
            display: flex

          &__item
            margin-right: 2px

            &:last-child
              margin-right: 0

            .radio

            span
              display: flex
              align-items: center
              justify-content: center
              width: 34px
              height: 34px

              &_diag

                i
                  display: block
                  background-image: url('../img/general/icon-diag.png')
                  width: 17px
                  height: 17px
                  background-repeat: no-repeat

                input:checked + span i
                  background-image: url('../img/general/icon-diag-active.png')


              &_graph

                i
                  display: block
                  background-image: url('../img/general/icon-graph.png')
                  width: 17px
                  height: 17px
                  background-repeat: no-repeat

                input:checked + span i
                  background-image: url('../img/general/icon-graph-active.png')







      &__table-graph
        display: flex
        justify-content: space-between

      &__table
        display: table
        width: 555px

        .table

          &__th
            display: table-row

          &__tr
            display: table-row

          &__label
            display: table-cell
            padding-bottom: 15px

            font-size: 16px
            font-weight: 700
            text-transform: uppercase

          &__status
            display: table-cell
            width: 321px
            padding-bottom: 13px

            .status

              &__wrap
                display: flex
                align-items: center
                position: relative

                &::after
                  content: ''
                  position: absolute
                  right: 47px
                  top: 10px
                  display: block
                  height: 1px
                  width: 120px
                  background-image: url('../img/general/icon-line.png')


              &__color
                width: 17px
                height: 17px
                border-radius: 50%
                margin-right: 10px

                &_green
                  background-color: $green

                &_blue
                  background-color: $blue

                &_orange
                  background-color: $orange

                &_violet
                  background-color: $violet

                &_red
                  background-color: $red

                &_gray
                  background-color: $gray_dark





              &__name

                color: $gray_dark
                font-size: 16px
                font-weight: 600
                text-transform: uppercase

          &__sum
            display: table-cell

            .sum

              &__wrap
                display: flex
                justify-content: space-between
                position: relative

                &::after
                  content: ''
                  position: absolute
                  right: 77px
                  top: 7px
                  display: block
                  height: 1px
                  width: 40px
                  background-image: url('../img/general/icon-line.png')

              &__value
                font-size: 16px
                font-weight: 700
                color: $gray_dark

              &__percentage
                font-size: 16px
                font-weight: 700
                color: $gray_dark

      &__data
        width: 267px
        text-align: center

        .data

          &__graph
            display: none



  .orders

    &__top
      display: flex
      justify-content: space-between
      margin-bottom: 35px

    &__filter

      .filter

        &__list
          display: flex

        &__item
          width: 112px
          margin-right: 2px

          &:last-child
            margin-right: 0

    &__per-page
      position: relative
      top: -5px

    .radio

      input
        &:checked + span
          background-color: $blue

      span
        background-color: $gray_light3



    &__table
      display: table
      width: 100%

      .table

        &__th
          display: table-row

        &__label
          position: relative
          display: table-cell
          vertical-align: middle
          padding: 8px 15px 7px
          border-top: 1px solid $gray_light
          border-bottom: 1px solid $gray_light

          text-transform: uppercase
          font-size: 14px
          font-weight: 800
          color: $gray_dark

          &::after
            content: ''
            display: block
            position: absolute
            top: 6px
            bottom: 6px
            right: 0
            width: 1px
            background-color: $gray_light

          &:first-child
            padding: 8px 6px 6px 7px

          &:last-child

            &::after
              display: none

          &_address
            width: 310px

          &_center
            text-align: center

          i.delete
            background-image: url('../img/general/icon-order-delete-bold.png')



        &__tr
          display: table-row

        &__td
          position: relative
          display: table-cell
          vertical-align: middle
          padding: 13px 9px 11px
          border-bottom: 1px solid $gray_light

          font-size: 14px
          font-weight: 700
          color: $gray_dark

          &::after
            content: ''
            display: block
            position: absolute
            top: 6px
            bottom: 6px
            right: 0
            width: 1px
            background-color: $gray_light

          &:first-child
            padding-left: 7px

          &:last-child
            padding-left: 15px

            &::after
              display: none

          &_center
            text-align: center

          i

            &.delete

              &:hover
                background-image: url('../img/general/icon-order-delete-hover.png')

            &.details

              &:hover
                background-image: url('../img/general/icon-order-details-hover.png')

        &__status
          display: inline-block
          width: 96px
          padding: 5px 0 4px

          &_green
            background-color: $green
            color: $white

          &_blue
            background-color: $blue
            color: $white

          &_red
            background-color: $red
            color: $white
      i

        &.details
          display: block
          width: 13px
          height: 13px
          background-image: url('../img/general/icon-order-details.png')
          background-repeat: no-repeat

        &.delete
          display: block
          width: 10px
          height: 10px
          background-image: url('../img/general/icon-order-delete.png')
          background-repeat: no-repeat


