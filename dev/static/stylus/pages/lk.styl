.lk

  &__message
    margin-bottom: 28px

  &__sum-date
    display: flex
    justify-content: space-between

  &__sum
    width: calc(50% - 10px)
    background-color: $gray_light3
    padding: 24px 10px 16px

    text-align: center
    font-weight: 700

    .sum

      &__heading
        margin-bottom: 5px

        font-size: 20px
        line-height: 20px
        color: $gray_dark2
        text-transform: uppercase
        
      &__value
        color: $red
        font-size: 33px
        line-height: 35px

      &__date
        font-size: 14px
        line-height: 25px
        color: $gray_dark




  &__date
    width: calc(50% - 10px)
    background-color: $green
    padding: 24px 10px 16px

    text-align: center
    color: $white
    font-weight: 700

    .date

      &__date
        font-size: 18px
        line-height: 22px

      &__time
        font-size: 33px
        line-height: 33px

      &__day
        font-size: 14px
        line-height: 25px
