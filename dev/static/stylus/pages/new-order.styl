.new-order

  &__timers
    margin-bottom: 28px

  .timers

    &__list
      display: flex
      justify-content: space-between

    &__item
      display: flex
      justify-content: space-between
      align-items: center
      width: 298px
      padding: 12px 18px

      color: $white
      font-weight: 700

      &_red
        background-color: $red

      &_green
        background-color: $green

      &_blue
        background-color: $blue

  .timer

    &__text
        font-size: 14px

    &__time
      font-size: 33px

    &__date
      font-size: 18px

  &__form
    padding: 33px 18px 43px
    background-color: $gray_light3

  .form

    &__heading
      padding-bottom: 28px
      margin-bottom: 28px
      border-bottom: 1px solid #d7d7d7

      font-size: 27px
      text-transform: uppercase
      font-weight: 600
      color: #555555

    &__row
      display: flex
      align-items: center
      justify-content: space-between
      margin-bottom: 17px

      &_digits
        padding-bottom: 21px
        margin-bottom: 10px
        border-bottom: none

        .item

          &__label
            margin-bottom: 9px

          &__input
            margin-right: 17px

            input
              width: 100%
              padding: 11px 10px 10px
              border: 1px solid $gray_light !important

              text-align: center
              font-family: 'Akrobat', sans-serif
              font-size: 16px
              font-weight: 700
              color: $gray_dark

            &_wide
              width: 557px

            &_quantity
              width: 63px

            &_width
              width: 63px

            &_length
              width: 63px

            &_diameter
              width: 63px

            &_red

              input
                color: $red


    &__item

      &_checkbox
        align-self: flex-end
        position: relative
        top: -8px

        span
          display: block

          font-family: mainFont
          font-size: 14px
          font-weight: 700
          color: $gray_dark2

          &::before
            top: 4px

          &::after
            top: 9px

    .item

      &__label
        margin-bottom: 8px

        font-size: 14px
        font-weight: 700
        color: #8e8e8e

        a
          color: $blue
          text-decoration: underline

      &__input

        .nice-select
          width: 169px
          background-color: $white
          border: 1px solid $gray_light

          font-size: 16px
          color: $gray_dark2
          font-weight: 700
          text-transform: none

        &_wide

          .nice-select
            width: 239px

        &_small

          .nice-select
            width: 99px

    &__btns

      a:first-child
        width: 183px
        margin-right: 15px

      a:nth-child(2)
        width: 130px

  &__add
    padding: 24px 18px

  .add

    &__btn
      margin-bottom: 22px

      .button
        width: 180px

    &__fields-address
      display: flex
      margin-bottom: 42px


    &__fields
      width: 390px
      margin-right: 28px

    .fields

      &__list
        margin-bottom: 27px

      &__item
        margin-bottom: 20px;

      &__label
        margin-bottom: 5px

        font-size: 14px
        font-weight: 700
        color: #8e8e8e

      &__input
        width: 100%

        input
          width: 100%
          padding: 11px 10px 10px
          border: 1px solid $gray_light !important

          font-family: 'Akrobat', sans-serif
          font-size: 16px
          font-weight: 700
          color: $gray_dark

        .nice-select
          width: 100%
          float: none
          padding-left: 10px
          background-color: $white
          border: 1px solid $gray_light

          font-size: 16px
          color: $gray_dark2
          font-weight: 700
          text-transform: none



      &__res
        font-size: 16px
        line-height: 25px
        font-weight: 700
        color: $gray_dark2

        span
          font-weight: 900

          &.red
            color: $red

    &__address-map
      flex-grow: 1
      align-self: flex-start
      padding-top: 22px

    .address
      padding: 33px 27px 28px
      margin-bottom: 16px
      background-color: $gray_light3

      &__heading
        margin-bottom: 20px

        color: $gray_dark2
        font-size: 16px
        font-weight: 700
        text-transform: uppercase

      &__row

        .fields

          &__item
            width: 390px


        &_line
          margin-bottom: 29px

          .fields
            display: flex

            &__item
              width: 62px
              margin-right: 21px
              margin-bottom: 0

              input
                text-align: center

      &__lift

        .checkbox
          display: block
          margin-bottom: 17px

          &:last-child
            margin-bottom: 0

    &__delivery

    .delivery

      &__type
        margin-bottom: 26px

        .checkbox
          margin-right: 29px

          &:last-child
            margin-right: 0

      &__params
        display: flex
        flex-wrap: wrap
        margin-bottom: 25px

        .nice-select
          width: 100%
          float: none
          padding-left: 10px
          background-color: $white
          border: 1px solid $gray_light

          font-size: 16px
          color: $gray_dark2
          font-weight: 700
          text-transform: none

        .param
          margin-right: 35px

          &__label
            margin-bottom: 6px

          &__input

            input
              width: 100%
              padding: 11px 10px 10px
              border: 1px solid $gray_light !important

              font-family: 'Akrobat', sans-serif
              font-size: 16px
              font-weight: 700
              color: $gray_dark
              text-align: center

          &:last-child
            margin-right: 0

          &_type
            width: 169px

          &_time
            width: 86px

          &_payer
            width: 222px

          &_wide
            width: 100%
            margin-top: 23px

            textarea
              width: 100%
              height: 120px

    .payment
      margin-bottom: 32px

      &__label
        margin-bottom: 17px

      &__type

        .checkbox
          display: block
          margin-bottom: 18px

          &:last-child
            margin-bottom: 0

    .services
      margin-bottom: 35px

      &__label
        margin-bottom: 17px

      &__list

        .checkbox
          display: block
          margin-bottom: 18px

          &:last-child
            margin-bottom: 0

    .digits
      display: flex
      margin-bottom: 33px

      &__field
        margin-right: 28px

        &:last-child
          margin-right: 0

      .field

        &__label
          margin-bottom: 6px

        &__input
          width: 169px

          input
            width: 100%
            padding: 11px 10px 10px
            border: 1px solid $gray_light !important

            font-family: 'Akrobat', sans-serif
            font-size: 16px
            font-weight: 700
            color: $red



