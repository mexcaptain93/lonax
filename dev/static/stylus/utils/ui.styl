.input
  border: 1px solid $gray
  border-radius: 3px
  padding: 11px 15px 9px

  font-family 'Roboto', sans-serif, Arial
  font-size: 14px
  line-height: 14px
  color: $gray_dark

  &_icon
    padding-left: 40px
    background-repeat: no-repeat

  &_login
    background-image: url('../img/general/icon-login.png')
    background-position: 13px 9px;

  &_password
    background-image: url('../img/general/icon-password.png')
    background-position: 13px 9px;

.checkbox
  cursor: pointer
  user-select: none

  input
    display: none

    &:checked + span::after
      display: block

  span
    position: relative
    padding-left: 31px

    color: $gray_dark
    font-family 'Roboto', sans-serif, Arial
    font-size: 14px
    line-height: 14px

    &::before
      content: ''
      display: block
      position: absolute
      top: -3px
      left: 0
      width: 21px
      height: 21px
      border: 1px solid $gray_light
      border-radius: 3px
      background-color: $white

    &::after
      content: ''
      display: none
      position: absolute
      top: 2px
      left: 5px
      width: 11px
      height: 11px
      border-radius: 3px
      background-color: $blue

.button
  display: inline-block
  width: 175px
  height: 43px
  background: $green
  border: 1px solid transparent
  transition: .3s all
  cursor: pointer

  font-family: 'Akrobat', sans-serif;
  font-weight: bold
  text-align: center
  color: $white
  text-transform: uppercase
  font-size: 16px
  line-height: 40px

  &:hover
    color: $green
    background: transparent
    border-color: $green

.message
  display: flex
  padding: 22px 35px 30px 18px
  background-color: $blue_light




  &__icon
    margin-right: 24px
    flex-grow: 0
    flex-shrink: 0
    width: 48px
    height: 48px
    background-image: url('../img/general/message-icon.png')
    background-repeat: no-repeat

  &__content
    padding-top: 4px

  &__heading
    text-transform: uppercase
    font-size: 16px
    line-height: 25px
    font-weight: 900
    margin-bottom: 11px

  &__text
    font-size: 16px
    line-height: 25px

.radio
  user-select none

  input
    display: none

    &:checked + span
      background-color: $blue

      color: $white


  span
    display: inline-block
    width: 100%
    background-color: $white

    color: $gray_dark
    text-transform: uppercase
    text-align: center
    font-size: 14px
    line-height: 33px
    font-weight: 700
