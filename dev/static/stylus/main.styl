@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'
@import 'utils/ui.styl'

html
	font-size baseFontSize
	height 100%
	line-height 1.3

body
	font-family mainFont
	height 100%

h1,h2,h3,h4,h5,h6
	margin 0

ul,li
	list-style-type none
	margin 0
	padding 0

img
	max-width: 100%

p
	margin 0

a
	color inherit
	text-decoration none

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle

textarea
	resize none

section
	position relative

input,
select,
button
	outline none

*, *:before, *:after
	box-sizing border-box

.wrapper
	display flex
	flex-direction column
	min-height 100%

.content
	flex 1 0 auto

.main
	display: flex
	width: 1280px
	margin: 0 auto
	padding-top: 38px
	padding-bottom: 149px

	&__sidebar
		margin-right: 30px

	&__content
		width: 950px


