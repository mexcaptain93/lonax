extends ../layout/main

block variables
    - var title = 'Личный кабинет'
    - var pageClass = 'lk'

block content

    .lk__message.message
        .message__icon
        .message__content
            .message__heading
                span Сообщение
            .message__text
                p Сегодня в нашу Систему Электроного Заказа была добавлена Мебель и внесены некоторые изменение в работу формы заказа.
                p Теперь, если Вы выбрали одну позицию и указали в графе кол-во несколько штук, а, затем хотите задать спец. цену этой позиции, нужно указать цену за сумму данных позиций. А так-же при заполнении полей: дом, корпус, строение, владение, квартира и подъезд - указывать только значения, без вспомогательных обозначений.
    .lk__sum-date
        .lk__sum.sum
            .sum__heading
                span Общая сумма заказов
            .sum__value
                span 177 500 Р
            .sum__date
                span За ноябрь 2018

        .lk__date.date
            .date__date
                span 8 Ноября 2018
            .date__time
                span 21:40:55
            .date__day
                span Пятница

    .lk__select-period.select-period
        .select-period__presets-date.presets-date
            .select-period__presets.presets
                .presets__list
                    .presets__item
                        label.radio
                            input(type='radio' name="period")
                            span Сегодня
                    .presets__item
                        label.radio
                            input(type='radio' name="period")
                            span Вчера
                    .presets__item
                        label.radio
                            input(type='radio' name="period" checked)
                            span Неделя
                    .presets__item
                        label.radio
                            input(type='radio' name="period")
                            span Месяц
                    .presets__item
                        label.radio
                            input(type='radio' name="period")
                            span Квартал
                    .presets__item
                        label.radio
                            input(type='radio' name="period")
                            span Год
            .select-period__date sss
        .select-period__refresh.refresh
            a(href='#').button
                i
                span Обновить
    .lk__stat.stat
        .stat__heading-toggler
            .stat__heading
                span Статистика по статусам заказов
            .stat__toggler.toggler
                .toggler__list
                    .toggler__item
                        label.radio
                            input(type='radio' name="period")
                            span a
                    .toggler__item
                        label.radio
                            input(type='radio' name="period")
                            span b
        .stat__table-graph
            .stat__table.table
                .table__th
                    .table__label
                        span Статусы:
                    .table__label
                        span Сумма заказов:
                .table__tr
                    .table__status.status
                        .status__wrap
                            .status__color.status__color_green
                            .status__name
                                span Выполнено
                    .table__sum.sum
                        .sum__wrap
                            .sum__value
                                span 132 890 Р
                            .sum__percentage
                                span 40%
                .table__tr
                    .table__status.status
                        .status__wrap
                            .status__color.status__color_blue
                            .status__name
                                span В обработке
                    .table__sum.sum
                        .sum__wrap
                            .sum__value
                                span 132 890 Р
                            .sum__percentage
                                span 40%
                .table__tr
                    .table__status.status
                        .status__wrap
                            .status__color.status__color_orange
                            .status__name
                                span В работе
                    .table__sum.sum
                        .sum__wrap
                            .sum__value
                                span 132 890 Р
                            .sum__percentage
                                span 40%
                .table__tr
                    .table__status.status
                        .status__wrap
                            .status__color.status__color_violet
                            .status__name
                                span Отгружено
                    .table__sum.sum
                        .sum__wrap
                            .sum__value
                                span 132 890 Р
                            .sum__percentage
                                span 40%
                .table__tr
                    .table__status.status
                        .status__wrap
                            .status__color.status__color_red
                            .status__name
                                span Отказ
                    .table__sum.sum
                        .sum__wrap
                            .sum__value
                                span 132 890 Р
                            .sum__percentage
                                span 40%
                .table__tr
                    .table__status.status
                        .status__wrap
                            .status__color.status__color_gray
                            .status__name
                                span Рекламация
                    .table__sum.sum
                        .sum__wrap
                            .sum__value
                                span 132 890 Р
                            .sum__percentage
                                span 40%
            .stat__data.data
                .data__diag
                    img(src='/static/img/content/diag.png')
                .data__graph
                    img(src='/static/img/content/graph.png')








